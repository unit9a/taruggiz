{
  "elements": [
    {
      "title": "component",
      "description": "Generate a new component",
      "command": "ng g component {{options}}",
      "options": [
        {
          "title": "Element Name",
          "description": "New component's name",
          "type": "input",
          "validator": "",
          "mandatory": true,
          "command": "{{value}}"
        },
        {
          "title": "No targeted directory for the component",
          "description": "Do not create the component elements  in its own directory ",
          "type": "boolean",
          "default": false,
          "values": [
            {
              "value": "false",
              "command": ""
            },
            {
              "value": "true",
              "command": "--flat"
            }
          ]
        }
      ]
    },
    {
      "title": "directive",
      "description": "Generate a new directive",
      "command": "ng g directive {{options}}",
      "options": [
        {
          "title": "Element Name",
          "description": "New directive's name",
          "type": "input",
          "validator": "",
          "mandatory": true,
          "command": "{{value}}"
        }
      ]
    },
    {
      "title": "pipe",
      "description": "Generate a new pipe ",
      "command": "ng g pipe {{options}}",
      "options": [
        {
          "title": "Element Name",
          "description": "New pipe's name",
          "type": "input",
          "validator": "",
          "mandatory": true,
          "command": "{{value}}"
        }
      ]
    },
    {
      "title": "service",
