    },
    {
      "title": "module",
      "description": "Generate a new module",
      "command": "ng g module {{options}}",
      "options": [
        {
          "title": "Element Name",
          "description": "New module's name",
          "type": "input",
          "validator": "",
          "mandatory": true,
          "command": "{{value}}"
        },
        {
          "title": "Generate separate routes module file",
          "description": "create a separate file my-module-routing.module.ts to store the module routes.\nThe file includes an empty Routes object that you can fill with routes to different components and/or modules.\nThis option also generates a default component with the same name as the module.",
          "type": "boolean",
          "default": false,
          "values": [
            {
              "value": "false",
              "command": ""
            },
            {
              "value": "true",
              "command": "--routing"
            }
          ]
        },
        {
          "title": "Generate a specification file ",
          "description": "specifies if a spec file is generated",
          "type": "boolean",
          "default": false,
          "values": [
            {
              "value": "false",
              "command": ""
            },
            {
              "value": "true",
              "command": "--spec"
            }
          ]
        }
